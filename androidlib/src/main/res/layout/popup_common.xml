<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pop_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88323232">

    <LinearLayout
        android:id="@+id/ll_pop_anim"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_bg_popup"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="15dp"
                android:text="提 示"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_pop_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_pop_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pop_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:alpha="0.8"
            android:background="@color/color_gray"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_pop_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_popup_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_black"
                android:visibility="visible" />

            <View
                android:id="@+id/view_control_divider"
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="@color/color_gray"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_pop_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_popup_confirm"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_black"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
