<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_border"
    android:paddingLeft="@dimen/dp_16"
    android:paddingTop="@dimen/dp_20"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_20">

    <ImageView
        android:id="@+id/iv_shop"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:scaleType="center"
        android:src="@drawable/meinv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="简约现代创意五金客厅台灯艺术玻璃床头LED卧室设计师样板房台灯"
        android:textColor="#303030"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_shop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/bg_shape_coupon"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_4"
        android:paddingVertical="@dimen/dp_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_shop">

        <TextView
            android:id="@+id/tv_coupon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券  "
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_coupon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:text="¥100"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:gravity="right"
        android:text="实付："
        android:textColor="#525252"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_shop"
        app:layout_constraintLeft_toRightOf="@+id/ll_coupon_amount"
        app:layout_constraintRight_toLeftOf="@+id/tv_order_price"
        app:layout_constraintTop_toTopOf="@+id/tv_order_price" />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="¥48"
        android:textColor="#E51C23"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_shop"
        app:layout_constraintLeft_toRightOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>