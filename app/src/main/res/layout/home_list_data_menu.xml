<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_synthesize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_20">

    <com.laka.androidlib.widget.fontsize.FixedSizeTextView
        android:id="@+id/tv_synthesize"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:drawableRight="@drawable/default_icon_selected"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_24"
        android:text="综合"
        android:textColor="@color/color_main" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE" />

    <com.laka.androidlib.widget.fontsize.FixedSizeTextView
        android:id="@+id/tv_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_24"
        android:text="优惠券面值由高到低" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE"
        android:visibility="gone" />

    <com.laka.androidlib.widget.fontsize.FixedSizeTextView
        android:id="@+id/tv_commission_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_24"
        android:text="佣金金额由高到低"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE"
        android:visibility="gone" />

    <com.laka.androidlib.widget.fontsize.FixedSizeTextView
        android:id="@+id/tv_commission_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/dp_24"
        android:text="佣金比率由高到低"
        android:visibility="gone" />

</LinearLayout>
