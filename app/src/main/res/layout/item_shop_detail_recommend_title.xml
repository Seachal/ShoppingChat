<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/color_common_bg" />

    <com.laka.androidlib.widget.fontsize.FixedSizeTextView
        android:id="@+id/text_view_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:text="相关推荐"
        android:textColor="@color/color_main"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/view_line_tow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_line_one" />


    <ImageView
        android:id="@+id/image_view_left_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/title_bg_left"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_recommend_title"
        app:layout_constraintRight_toLeftOf="@+id/text_view_recommend_title"
        app:layout_constraintTop_toTopOf="@+id/text_view_recommend_title" />


    <ImageView
        android:id="@+id/image_view_right_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:src="@drawable/title_bg_right"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_recommend_title"
        app:layout_constraintLeft_toRightOf="@+id/text_view_recommend_title"
        app:layout_constraintTop_toTopOf="@+id/text_view_recommend_title" />

    <View
        android:id="@+id/view_line_tow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_5"
        android:background="@color/color_common_bg"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>