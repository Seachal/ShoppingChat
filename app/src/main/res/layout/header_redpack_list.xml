<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ededed"
    android:paddingBottom="@dimen/dp_55">

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_55"
        android:src="@drawable/default_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="4dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="xxx"
        android:textColor="#2D2D2D"
        app:layout_constraintTop_toBottomOf="@+id/ivAvatar" />

    <com.laka.androidlib.widget.text.RiseNumberTextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_17"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#2D2D2D"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <TextView
        android:id="@+id/tv_send_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/sp_18"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <TextView
        android:id="@+id/tvLeftNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#7F7F7F"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <TextView
        android:id="@+id/tvRedPackType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="收到红包"
        android:textColor="#7F7F7F"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvLeftNum"
        app:layout_constraintRight_toRightOf="@+id/tvLeftNum"
        app:layout_constraintTop_toBottomOf="@+id/tvLeftNum" />

    <TextView
        android:id="@+id/tvRightNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#7F7F7F"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrice" />

    <TextView
        android:id="@+id/tv_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="手气最佳"
        android:textColor="#7F7F7F"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/tvRightNum"
        app:layout_constraintRight_toRightOf="@+id/tvRightNum"
        app:layout_constraintTop_toBottomOf="@+id/tvRightNum" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</android.support.constraint.ConstraintLayout>