<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_52"
    android:background="@drawable/btn_common_white"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_personal_util"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_personal_util"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="@string/util_my_order"
        android:textColor="@color/color_font"
        app:layout_constraintBottom_toBottomOf="@id/iv_personal_util"
        app:layout_constraintLeft_toRightOf="@id/iv_personal_util"
        app:layout_constraintTop_toTopOf="@id/iv_personal_util" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="@id/tv_personal_util"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_personal_util" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_common_bg"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>