<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/nim_contact_list_item_selecter">

    <View
        android:id="@+id/line"
        style="@style/horizontal_light_thin_divider"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/img_head"/>

    <com.laka.androidlib.widget.fontsize.AutoScaleImageView
        android:id="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/dp_6"
        android:contentDescription="@string/empty"
        android:scaleType="fitStart"/>

    <TextView
        android:id="@+id/tv_func_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/img_head"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="系统功能"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tab_new_msg_label"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/spot_circlt_ellipse_red"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:visibility="gone"/>

</RelativeLayout>