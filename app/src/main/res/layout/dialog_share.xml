<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white">


    <TextView
        android:id="@+id/tv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="分享"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_share" />

    <LinearLayout
        android:id="@+id/ll_share_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_13"
        android:paddingTop="@dimen/dp_13"
        app:layout_constraintTop_toBottomOf="@+id/view_line_one">

        <!-- 微信 -->
        <LinearLayout
            android:id="@+id/ll_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/seletor_btn_share_weixin" />

            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_6"
                android:text="微信"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <!-- 朋友圈 -->
        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/ll_pyq"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pyq"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/seletor_btn_share_pyq" />

            <TextView
                android:id="@+id/tv_pyq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_6"
                android:text="朋友圈"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <!-- QQ -->
        <LinearLayout
            android:id="@+id/ll_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/seletor_btn_share_qq" />

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_6"
                android:text="QQ"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <!-- QQ空间 -->
        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/ll_kj"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_kj"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/seletor_btn_share_kj" />

            <TextView
                android:id="@+id/tv_kj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/dp_6"
                android:text="QQ空间"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </LinearLayout>


    <View
        android:id="@+id/view_line_tow"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bg"
        app:layout_constraintTop_toBottomOf="@+id/ll_share_icon" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:text="取消"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintTop_toBottomOf="@+id/view_line_tow" />

</android.support.constraint.ConstraintLayout>